	<!-- 멤버로그인이력 추가 -->
	<insert id="createMemberLoginLog" parameterType="String">
		INSERT INTO member_login_log (
			mll_num, 
			mbr_id, 
			mll_ip, 
			mll_date
		) VALUES (
			#{keyValue}, 
			#{memberId}, 
