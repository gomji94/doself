	  			<result column="rh_target" property="rhTarget" />	  				  				  			  			  			
	  			<result column="rh_reward_type" property="rhRewardType" />	  				  				  			  			  			
	  			<result column="rh_rank" property="rhRank" />
	  			<result column="rh_point" property="rhPoint" />
