				ON rph.cg_num = cg.cg_num
				INNER JOIN `member` m
				ON rph.mbr_id = m.mbr_id
				INNER JOIN reward_history rh
				ON rph.rh_num = rh.rh_num
			<where>
				1=1
				<if test="searchType != null and searchKeyword != null and searchType != '' and searchKeyword != ''">
